@page
@model aspnetcore_project.ManageUsersModel

@{
    ViewData["Title"] = "ManageUsers";
}

<h1>ManageUsers</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Is Organizer
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                <form method="post">
                    <input type="checkbox" onclick="this.form.submit()" value="remember"/>
                    <input type="hidden" name="id" value="@item.Id" />

                </form>
            </td>
            
            <td>
                @*
            IsOrganizer item
            @Html.DisplayFor(modelItem => item)
                *@
            </td>
        </tr>
}
    </tbody>
</table>
