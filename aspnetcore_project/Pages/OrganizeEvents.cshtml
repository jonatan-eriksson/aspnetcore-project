@page
@model aspnetcore_project.Pages.OrganizeEventsModel

@{
    ViewData["Title"] = "OrganizeEvents";
}

<h1>Organize Events</h1>

<p>
    <a asp-page="AddEvent">Create New Event</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Address</th>
            <th>Place</th>
            <th>Date</th>
            <th>Spots available</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Events) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpotsAvailable)
            </td>
            <td>
                <a asp-page="/EditEvent" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
